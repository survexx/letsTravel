<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
            
            <!-- Card Header -->
            <div class="card-body p-4 p-md-5">
                <h3 class="text-center fw-bold mb-3">Welcome back</h3>
                <p class="text-center text-muted mb-4">
                    Login to continue your journey
                </p>

                <% if (error) { %>
                    <div class="alert alert-danger text-center py-2">
                        <%= error %>
                    </div>
                <% } %>

                <!-- Login Form -->
                <form action="/user/login" method="post">
                    
                    <div class="form-floating mb-3">
                        <input 
                            type="email" 
                            class="form-control rounded-3" 
                            id="email" 
                            name="email" 
                            placeholder="name@example.com"
                            required
                        >
                        <label for="email">Email address</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input 
                            type="password" 
                            class="form-control rounded-3" 
                            id="password" 
                            name="password" 
                            placeholder="Password"
                            required
                        >
                        <label for="password">Password</label>
                    </div>

                    <button 
                        type="submit" 
                        class="btn btn-danger w-100 py-2 rounded-3 fw-semibold">
                        Login
                    </button>
                </form>

                <!-- Footer -->
                <div class="text-center mt-4">
                    <small class="text-muted">
                        Donâ€™t have an account?
                        <a href="/signup" class="text-danger fw-semibold">Sign up</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</body>
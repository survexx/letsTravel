<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg border-0 rounded-4" style="max-width: 720px; width: 100%;">
            <h3 class="text-center fw-bold mb-3">Edit Your Property</h3>
                <!-- Login Form -->
                <form action="/host/listing/<%= hotelData._id %>/edit" method="post">
                    
                    <div class="form-floating mb-3">
                        <input 
                            type="text" 
                            class="form-control rounded-3" 
                            id="title" 
                            name="title" 
                            value= "<%= hotelData.title %>"
                            placeholder="Add your property name"
                            required
                        >
                        <label for="title">Title</label>
                    </div>

                    <div class="form-floating mb-4">
                        <textarea
                            type="text" 
                            class="form-control rounded-3" 
                            id="description" 
                            name="description" 
                            placeholder="description"
                            required
                        >
                            <%= hotelData.description.trim() %>
                        </textarea>
                        <label for="description">Description</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input
                            type="number" 
                            class="form-control rounded-3" 
                            id="pricePerNight" 
                            name="pricePerNight" 
                            value="<%= hotelData.pricePerNight %>"
                            placeholder="Enter the price per night"
                            required
                        >
                        <label for="pricePerNight">Price/Night</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input
                            type="text" 
                            class="form-control rounded-3" 
                            id="address" 
                            name="address" 
                            value= "<%= hotelData.location.address %>"
                            placeholder="Enter address of your property"
                            required
                        >
                        <label for="address">Address</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input
                            type="text" 
                            class="form-control rounded-3" 
                            id="city" 
                            name="city" 
                            value= "<%= hotelData.location.city %>"
                            placeholder="city"
                            required
                        >
                        <label for="city">City</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input
                            type="text" 
                            class="form-control rounded-3" 
                            id="state" 
                            name="state" 
                            placeholder="state"
                            value= "<%= hotelData.location.state %>"
                            required
                        >
                        <label for="state">State</label>
                    </div>

                     <div class="form-floating mb-4">
                        <input
                            type="text" 
                            class="form-control rounded-3" 
                            id="country" 
                            name="country" 
                            placeholder="country"
                            value= "<%= hotelData.location.country %>"
                            required
                        >
                        <label for="country">Country</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input
                            type="number" 
                            class="form-control rounded-3" 
                            id="maxGuests" 
                            name="maxGuests" 
                            value= "<%= hotelData.maxGuests %>"
                            placeholder="maxGuests"
                            required
                        >
                        <label for="maxGuests">Maximum Guests</label>
                    </div>

                    <div class="dropdown mb-4">
                        <button 
                            class="form-control text-start rounded-3 dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            Select Amenities
                        </button>

                        <ul class="dropdown-menu w-100 p-3">
                            <li>
                                <input type="checkbox" name="amenities[]" value="wifi" <%= hotelData.amenities.includes("wifi") ? "checked" : "" %>> Wi-Fi
                            </li>
                            <li>
                                <input type="checkbox" name="amenities[]" value="parking" <%= hotelData.amenities.includes("parking") ? "checked" : "" %>> Parking
                            </li>
                            <li>
                                <input type="checkbox" name="amenities[]" value="pool" <%= hotelData.amenities.includes("pool") ? "checked" : "" %>> Swimming Pool
                            </li>
                            <li>
                                <input type="checkbox" name="amenities[]" value="ac" <%= hotelData.amenities.includes("ac") ? "checked" : "" %>> Air Conditioning
                            </li>
                            <li>
                                <input type="checkbox" name="amenities[]" value="tv" <%= hotelData.amenities.includes("tv") ? "checked" : "" %>> TV
                            </li>
                            <li>
                                <input type="checkbox" name="amenities[]" value="kitchen" <%= hotelData.amenities.includes("kitchen") ? "checked" : "" %>> Kitchen
                            </li>
                        </ul>
                    </div>

                    <button type="submit" class="btn btn-danger w-100 py-2 rounded-3 fw-semibold">
                        Edit
                    </button>
                </form>
        </div>
    </div>
</body>

